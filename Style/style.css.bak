body {
	font-szie: 10pt;
	font-family:  FangSong, Microsoft JhengHei, Tahoma, Arial, Helvetica, sans-serif;
	color: black;
	line-height: 14pt;
	padding-left: 5pt;
	padding-right: 5pt;
	padding-top: 5pt;
}


h1 {
	font-size: 36pt;
	font-weight: bold;
	line-height: 20pt;
	color: yellow;
	text-align:center;
}
h2 {
	font-size: 24pt;
	font-weight: bold;
	line-height: 16pt;
	color: red;
	text-align: left;
}
h3 {
	font-size: 16pt;
	line-height: 16pt;
	color: Blue;
	text-align: right;
}
@media (min-width:600px){
	body{
		background-color:green;
	}
}
@media (max-width:599px){
	body{
		background-color:yellow;
	}
}
#words {
	display: flex;
	flex-wrap: wrap;
}
#words > div {
	border: 3px solid blue;
	background: orange;
	width:   200px;
	height:  150px;
	padding: 20px;
	margin:  20px;
	font-family:  FangSong, Microsoft JhengHei, Tahoma, Arial, Helvetica, sans-serif;
	font-size: 20px;
	font-weight: bold;
}
@font-face{
	font-family: 'fanti';
	src:url('css/fanti.ttf');
	font-weight: normal;
	font-style: normal;
}
		
		